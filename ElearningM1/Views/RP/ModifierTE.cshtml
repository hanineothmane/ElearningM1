@model ElearningM1.Models.TuteurEnseignant
@{
    ViewBag.Title = "Modification informations " + Model.Nom;
    Layout = "~/Views/Shared/_LayoutRP.cshtml";
}
<head>
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/materialize.css" />
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/materialize.min.css" />
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/style.css" />
</head>
<body>
    <h4>Modifier informations concernant : @Model.Prenom @Model.Nom</h4>

    @using (Html.BeginForm("ModifierTE", "RP", FormMethod.Post))
    {

        <div class="form-group">
            @Html.LabelFor(t => t.Nom)
            @Html.TextBoxFor(t => t.Nom, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Prenom)
            @Html.TextBoxFor(t => t.Prenom, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.DateNaiss)
            @Html.TextBoxFor(t => t.DateNaiss, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Email)
            @Html.TextBoxFor(t => t.Email, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Mdp)
            @Html.TextBoxFor(t => t.Mdp, new { @class = "form-control", placeholder = "Password" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Telephone)
            @Html.TextBoxFor(t => t.Telephone, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Adresse)
            @Html.TextBoxFor(t => t.Adresse, new { @class = "form-control" })
        </div>

        <input type="submit" class="btn btn-primary" value="Modifier" />
    }
</body>

