@model ElearningM1.Models.Apprenant
@{
    ViewBag.Title = "Inserer Apprenant";
    if (Session["TypeUtilisateur"] == "RP")
    {
        Layout = "~/Views/Shared/_LayoutRP.cshtml";
    }
    else if (Session["TypeUtilisateur"] == "TE" || Session["TypeUtilisateur"] == "Admin")
    {
        Response.Redirect("Index");
    }
}

<head>
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/materialize.css" />
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/materialize.min.css" />
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/style.css" />
</head>
<body>
    <h4>Ajouter un nouvel apprenant</h4>
    @using (Html.BeginForm())
    {

        <div class="form-group">
            @Html.TextBoxFor(a => a.Nom, new { @class = "form-control", placeholder = "Nom" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(a => a.Prenom, new { @class = "form-control", placeholder = "Prénom" } )
        </div>

        <div class="form-group">
            @Html.TextBoxFor(a => a.DateNaiss, new { @class = "form-control", placeholder = "Date de naissance" } )
        </div>

        <div class="form-group">
            @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(a => a.DateInscription, new { @class = "form-control", placeholder = "Date d'inscription" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(a => a.Telephone, new { @class = "form-control", placeholder = "Numéro de téléphone" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(a => a.Adresse, new { @class = "form-control", placeholder = "Adresse" })
        </div>

        <input type="submit" class="btn btn-primary" value="Valider" />
    }
</body>