@model ElearningM1.Models.TuteurEnseignant
@{
    ViewBag.Title = "Inserer Tuteur Enseignant";
    if (Session["TypeUtilisateur"] == "RP")
    {
        Layout = "~/Views/Shared/_LayoutRP.cshtml";
    }
    else if (Session["TypeUtilisateur"] == "TE" || Session["TypeUtilisateur"] == "Admin")
    {
        Response.Redirect("Index");
    }
}

<head>
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/materialize.css" />
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/materialize.min.css" />
    <link rel="stylesheet" media="screen" type="text/css" title="Exemple" href="~/Content/css/style.css" />
</head>
<body>
    <h4>Ajouter un nouvel enseignant</h4>
    <a href="javascript:history.go(-1)">Retour</a>
    @using (Html.BeginForm())
    {

        <div class="form-group">
            @Html.TextBoxFor(t => t.Nom, new { @class = "form-control", placeholder = "Nom" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.Prenom, new { @class = "form-control", placeholder = "Prénom" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.DateNaiss, new { @class = "form-control", placeholder = "Date de naissance" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.Email, new { @class = "form-control", @id = "inlineFormInputGroup", placeholder = "Email" })
        </div>

        <div class="form-group">
            @Html.PasswordFor(t => t.Mdp, new { @class = "form-control", placeholder = "Mot de passe" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.Telephone, new { @class = "form-control", placeholder = "Numéro de téléphone" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(t => t.Adresse, new { @class = "form-control", placeholder = "Adresse" })
        </div>

        <input type="submit" class="btn btn-primary" value="Valider" />
    }
</body>